.theme-popup {
    position: absolute
    left: 10px

    z-index: 1000;

    border-radius: 4px
    font-size: 0.7em

    .theme {
        margin: 0
        padding: 2px 10px
        line-height: 25px
        white-space: nowrap
        cursor: pointer

        &:hover:first-child,
        &:hover:last-child {
            border-top-left-radius: inherit;
            border-top-right-radius: inherit;
        }
    }

}